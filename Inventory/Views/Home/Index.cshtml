

<div class="text-center">
    <h1 class="display-4">Inventory System</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Lists</th>
            </tr>
        </thead>
    </table>
</div>
<div class="container">
    <div class="box">
    <a href="@Url.Action("Product", "Home")">Products</a>
    <img src="~/Images/Icons/product-icon.png" alt="an icon showing a box" class="icon1">
    </div>
    <div class="box">
    <a href="@Url.Action("PurchaseOrder", "Home")">Purchase Orders</a>
    <img src="~/Images/Icons/bill-receipt-icon.png" alt="an icon showing a recipt" class="icon2">
    </div>
    <div class="box">
    <a href="@Url.Action("PurchaseOrderDetails", "Home")">Purchase Order Details</a>
    <img src="~/Images/Icons/book-icon.png" alt="an icon showing a book full of information" class="icon3">
    </div>
    <div class="box">
    <a href="@Url.Action("Sale", "Home")">Sales</a>
    <img src="~/Images/Icons/column-chart-icon.png" alt="an icon showing a chart" class="icon4">
    </div>
    <div class="box">
    <a href="@Url.Action("Suppliers", "Home")">Suppliers</a>
        <img src="~/Images/Icons/truck-icon.png" alt="an icon showing a truck" class="icon5">
    </div>
</div>

