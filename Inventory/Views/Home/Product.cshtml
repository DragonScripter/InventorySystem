<div class="text-center">
    <h1 class="display-4">Inventory System</h1>
    <div class="right">
        <button onclick="showForm()">Create</button>
        <button onclick="deleteForm()">Delete</button>
    </div>
    <table>
        <thead>
            <tr>
                <th>Lists</th>
            </tr>
        </thead>
    </table>

    <table class="table1">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>SKU</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Supplier ID</th>
            </tr>
            <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductID</td>
                    <td>@product.Name</td>
                    <td>@product.SKU</td>
                    <td>@product.Price</td>
                    <td>@product.Quantity</td>
                    <td>@product.SupplierID</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="form-container" id="form-container">
    <div class="form-content">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" id="Name" name="Name" class="form-control" placeholder="Enter product name" required />
                <span class="text-danger" id="NameError"></span>
            </div>

            <div class="form-group">
                <label for="SKU">SKU</label>
                <input type="text" id="SKU" name="SKU" class="form-control" placeholder="Enter SKU" required />
                <span class="text-danger" id="SKUError"></span>
            </div>

            <div class="form-group">
                <label for="Price">Price</label>
                <input type="number" id="Price" name="Price" class="form-control" step="0.01" min="0.01" required />
                <span class="text-danger" id="PriceError"></span>
            </div>

            <div class="form-group">
                <label for="Quantity">Quantity</label>
                <input type="number" id="Quantity" name="Quantity" class="form-control" min="0" required />
                <span class="text-danger" id="QuantityError"></span>
            </div>

            <div class="form-group">
                <label for="Supplier">Supplier ID</label>
                <input type="number" id="Supplier" name="Supplier" class="form-control" required />
                <span class="text-danger" id="SupplierError"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <button type="button" class="btn btn-primary" onclick="closeForm()">Cancel</button>
            </div>
        </form>
    </div>
</div>
<div class="delete-container" id="delete-container">
    <div class="delete-content">
        <form asp-action="Delete" method="post">
            <div class="form-group">
                <label for="ID">ID Number</label>
                <input type="number" id="id" name="id" class="form-control" required />
                <span class="text-danger" id="IdentificationError"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
                <button type="button" class="btn btn-primary" onclick="closeDelete()">Cancel</button>
            </div>
        </form>
    </div>
</div>
